{
  "name": "Text Highlighter",
  "description": "Highlight text and get definitions",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  }
}
