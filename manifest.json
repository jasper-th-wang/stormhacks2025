{
  "name": "Text Highlighter",
  "description": "Highlight text and get definitions",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script/content.js"],
      "css": ["content_script/content.css"]
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
